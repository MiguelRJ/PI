<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgImage"
        android:layout_width="@dimen/letter_icon_size"
        android:layout_height="@dimen/letter_icon_size"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/imgImageDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/txvCreationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintEnd_toStartOf="@+id/txvEstablishment"
        app:layout_constraintStart_toEndOf="@+id/imgImage"
        app:layout_constraintTop_toTopOf="@+id/imgImage"
        tools:text="18/11/17 15:30" />

    <TextView
        android:id="@+id/txvEstablishment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@android:color/secondary_text_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvCreationDate"
        app:layout_constraintTop_toTopOf="@+id/imgImage"
        tools:text="vuelos" />

    <TextView
        android:id="@+id/txvPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/secondary_text_light"
        app:layout_constraintBottom_toBottomOf="@+id/imgImage"
        app:layout_constraintStart_toStartOf="@+id/txvCreationDate"
        app:layout_constraintTop_toBottomOf="@+id/txvCreationDate"
        tools:text="Payment" />

    <TextView
        android:id="@+id/txvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLength="14"
        android:singleLine="true"
        android:textAlignment="textEnd"
        android:textColor="@android:color/primary_text_light"
        app:layout_constraintBottom_toBottomOf="@+id/imgImage"
        app:layout_constraintEnd_toEndOf="@+id/txvCreationDate"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txvPayment"
        app:layout_constraintTop_toBottomOf="@+id/txvCreationDate"
        tools:text="150.67" />

    <TextView
        android:id="@+id/txvComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@android:color/secondary_text_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txvAmount"
        app:layout_constraintTop_toBottomOf="@+id/txvEstablishment"
        tools:text="hola hola hola hola hola hola hola " />


</android.support.constraint.ConstraintLayout>