<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- para que la action Mode se situe sobre la toolber y no la desplace -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.ActionMode</item>
    </style>

    <style name="Widget.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/colorBackgroundActionMode</item>
        <item name="android:background">@color/colorBackgroundActionMode</item>
        <item name="actionModeBackground">@color/colorBackgroundActionMode</item>
        <item name="android:actionModeBackground">@color/colorBackgroundActionMode</item>
        <item name="titleTextStyle">@style/Widget.ActionMode.TitleTextStyle</item>
    </style>

    <style name="Widget.ActionMode.TitleTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginEditText">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/shape_loginedittext</item>
    </style>

    <style name="LoginTextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="LoginCheckBox">
        <item name="android:textColor">@color/colorSilver</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="LoginTextViewMoreOptions">
        <item name="android:textColor">@color/colorSilver</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="LoginButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="LoginButtonOnDark">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="SocialButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GoogleButton" parent="SocialButton">
        <item name="android:drawableStart">@mipmap/ic_google</item>
        <item name="android:background">@color/colorGoogle</item>
        <item name="android:text">@string/btnGoogle</item>
    </style>

    <style name="FacebookButton" parent="SocialButton">
        <item name="android:drawableStart">@mipmap/ic_facebook</item>
        <item name="android:background">@color/colorFacebook</item>
        <item name="android:text">@string/btnFacebook</item>
    </style>

</resources>
